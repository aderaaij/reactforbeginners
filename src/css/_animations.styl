/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
	transition: all 0.5s ease
	transform: translateX(-120%) scale(0.5);
	max-height 0
	padding: 0!important
	&.order-enter-active
		transform translateX(0) scale(1);
		max-height 60px
		padding 2rem 0 !important
.order-leave
	transition all 0.5s ease
	transform translateX(0)
	&.order-leave-active
		transform translateX(-120%)
		max-height 0
		padding 0

.count-enter
	transition all 0.25s ease
	transform translateY(100%) // start of screen
	&.count-enter-active
		transform translateY(0)
		
.count-leave
	transform translateY(0)
	transition all 0.25s ease
	position absolute
	left: 0
	bottom 0
	&.count-leave-active
		transform translateY(-100%)